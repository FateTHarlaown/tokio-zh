.carbon-ads, .bsa-cpc-wrapper, .bsa-cpc {
    display: none;
}

.front {
    background-image: url("/imgs/sky.jpg");
    background-size: cover;
    padding-top: 2.2%;
    max-height: 666px;
}

.home .hero {
    color: #7B463D !important;
}
.home .description {
    color: #7B463D !important;
}

@media only screen and (min-width: 421px) and (max-width: 603px) {
    .front {
        max-height: 625px;
    }
}
@media (max-width: 420px) {
    .front {
        max-height: 480px;
    }
}
